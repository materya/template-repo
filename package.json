{
  "name": "@materya/template-repo",
  "description": "An opinionated template repository for Materya projects",
  "version": "1.0.0",
  "main": "",
  "typings": "",
  "homepage": "https://github.com/materya/template-repo",
  "url": "https://github.com/materya/template-repo",
  "email": "sylv3r@materya.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/materya/template-repo.git"
  },
  "author": "Sylver <sylv3r@materya.io>",
  "bugs": {
    "url": "https://github.com/materya/template-repo/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "typescript",
    "template",
    "node",
    "eslint",
    "git"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:all": "tsc -d",
    "develop": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "describe": "npm-scripts-info",
    "test": "run-s test:*",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint 'src/**/*.ts'",
    "test:unit": "jest --no-cache",
    "test:vulnerabilities": "snyk monitor",
    "release": "standard-version",
    "start": "node ./dist/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm t"
    ]
  },
  "dependencies": {
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^22.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "npm-scripts-info": "^0.3.9",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.9.1",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  }
}
